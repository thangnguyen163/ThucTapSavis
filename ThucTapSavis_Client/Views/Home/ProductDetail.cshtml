@{
    ViewData["Title"] = "DetailShop";
}
@using Newtonsoft.Json;
@{
    string Hethang = Context.Session.GetString("hethang"); // Hết hàng
    string soluonghet = Context.Session.GetString("soluonghet"); // hết số lượng
    string soluongkhongdu = Context.Session.GetString("soluongkhongdu"); // hết số lượng
    string thanhcong = Context.Session.GetString("thanhcong"); // thêm thành công
    string chuachon = Context.Session.GetString("chuachon"); // Chưa chọn sp 
}



    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-md-5">
                <div class="thumbnail">
                    <a href="">
                        <img src="~/images/@Model.Image" alt="Lights" style="width:100%">
                    </a>
                    </a>
                </div>
            </div>
            <div class="col-md-7 ">
                <div class="content1_detail">
                    <h2>@Model.Name</h2>
                    <div class="row">
                        <div class="col-md-3"><img src="Image/rating.png" alt=""></div>
                        <div class="col-md-3"> <h5>400 Đánh giá</h5></div>
                        <div class="col-md-3"><h5>2K Đã bán </h5></div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="Mausac">
                            <h5>Giá bán: @Model.Price.ToString("#,##0") đ</h5>
                            </div>
                        </div>
                    </div>

                    <form asp-action="AddToCart">
                    <input value="@Model.Id" name="ProductId" hidden="true"/>
                    
                        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                        <p>Size: &nbsp  &nbsp &nbsp   </p>
                            @foreach (var a in ViewBag.color)
                            {
                                <input type="radio" class="btn-check" name="ColorID" id="@a.Id" value="@a.Id" >
                                <label class="btn btn-outline-primary" for="@a.Id">@a.Name</label>
                            }
                    </div><br /><br />
                   
                        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                        <p>Màu sắc: &nbsp  &nbsp &nbsp    </p>
                        @foreach (var a in ViewBag.size)
                            {
                                <input type="radio" class="btn-check" name="SizeId" id="@a.Id" value="@a.Id">
                                <label class="btn btn-outline-primary" for="@a.Id">@a.Name</label>
                            }
                    </div><br /><br />
                        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                        <p>Số lượng: &nbsp  &nbsp &nbsp    </p>
                            <div class="mb-3">
                                <input type="text"
                                       id="quantity"
                                       name="quantity"
                                       value="1"
                                       style="width: 100%; text-align: center" />
                            </div>
                        </div>
                        <div>
                            <div class="col-sm-10">
                            </div>

                            <button type="submit" class="btn btn-warning btn_size2">Add to Cart</button>

                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
<p>@ViewBag.Hethang</p>
@if (!String.IsNullOrEmpty(Hethang))
{
    <script type="text/javascript">

        Swal.fire("Sản phẩm đã hết hàng")
    </script>
}
@if (!String.IsNullOrEmpty(soluonghet))
{
    <script type="text/javascript">

        Swal.fire("Sản phẩm số lượng không đủ ")
    </script>
}
@if (!String.IsNullOrEmpty(soluongkhongdu))
{
    <script type="text/javascript">

        Swal.fire("Số lượng không đủ để bán ")
    </script>
}

}@if (!String.IsNullOrEmpty(chuachon))
{
    <script type="text/javascript">

        Swal.fire("Vui lòng chọn Size và Color ")
    </script>
}

