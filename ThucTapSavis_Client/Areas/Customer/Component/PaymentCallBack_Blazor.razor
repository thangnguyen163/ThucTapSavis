@using Blazored.Toast.Configuration
<BlazoredToasts Position="ToastPosition.BottomRight"
                Timeout="10"
                IconType="IconType.FontAwesome"
                SuccessClass="success-toast-override"
                SuccessIcon="fa-solid fa-check"
                ErrorIcon="fa-solid fa-triangle-exclamation" />

<div class="text-center">
    <h1 class="display-4">Thanh toán Momo</h1>
   
    @if (_responseModel.Message.ToLower() == "success")
    {
        <div class="container">
            <div style="display:flex"><h1 class="display-4">Thanh toán Momo: </h1><h1 class="text-success">Thành Công</h1></div>
            <p>Order ID: <strong>@_responseModel.OrderId</strong></p>
            <p>Amount: <strong>@(int.Parse(_responseModel.Amount).ToString("#,##0")) đ</strong></p>
            <p>Order Info: <strong>@_responseModel.OrderInfo</strong></p>
        </div>
    }
    else
    {
        <div class="container">
            <div style="display:flex">
                <h1 class="display-4">Thanh toán Momo: </h1><h1 class="text-danger">Thanh Toán Thất Bại</h1>
            </div>
        </div>
    }
</div>
